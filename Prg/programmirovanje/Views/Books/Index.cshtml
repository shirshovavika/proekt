@using programmirovanje.Models
@*@model IEnumerable<Book>*@
@model IEnumerable<programmirovanje.Models.Book>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список книг</h3>
    </div>
    <div class="panel-body"></div>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th>Название</th>
            <th class="text-right">Цена</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">@item.BookId</td>
                <td>@Html.ActionLink(item.Name, "Details", "Books", new { id=item.BookId }, htmlAttributes: null)</td>
                <td class="text-right">@item.Price.ToString("# rub")</td>
                <td class="text-center">
                    @*@using (Html.BeginForm("Edit", "Books", new { id = item.BookId }))
        {
            @Html.Hidden("BookId", item.BookId)
            <input typeof="submit"
                    class="btn btn-default btn-xs"
                    value="Изменить" />
        }*@
                    <button class="btn">@Html.ActionLink("Изменить", "Edit", "Books", new { id = item.BookId }, htmlAttributes: null)</button>
                    <button class="btn">@Html.ActionLink("Удалить", "Delete", "Books", new { id = item.BookId }, htmlAttributes: null)"></button>
                </td>
            </tr>
        }
    </table>
</div>
<div class="panel-footer">
    @Html.ActionLink("Добавить книгу", "Create", null, new { @class = "btn btn-default" })
</div>


